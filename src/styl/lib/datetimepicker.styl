#hideinput
    display none

.onclick
    cursor pointer

.select
    background-color #2e5bff
    color white

.disable-selection
    -webkit-touch-callout none /* iOS Safari */
    -webkit-user-select none /* Safari */
    -khtml-user-select none /* Konqueror HTML */
    -moz-user-select none /* Old versions of Firefox */
    -ms-user-select none /* Internet Explorer/Edge */
    user-select none /* Non-prefixed version, currently
                        supported by Chrome, Edge, Opera and Firefox */


.datetimeinput
    background-color white
    border 1px solid
    width fit-content
    padding 2px
    > input
        box-sizing border-box
        background none
        border none
        width 1.5em
        margin 0 2px
        border 2px solid transparent
        +label.displaynone
            display none
    > select
        background none
        border 2px solid transparent
        text-align center
    > input::-webkit-outer-spin-button,
    > input::-webkit-inner-spin-button 
        -webkit-appearance none
        margin 0
    > input[type=number]
        -moz-appearance textfield
    > input.alert
        border 2px solid #ff4343
        border-radius: 5px
        + label
            display inline-block
            position absolute
            z-index 1
            width 0
            > .border
                width 200px
                height 40px
                text-align center
                background #fff
                position relative
                bottom 3rem
                right 2rem
                display flex
                filter drop-shadow(0 0 0.3rem black)
                align-items center
                border-radius 5px
                >div
                    margin auto
                > span.arrowout
                    width 0px
                    height 0px
                    border-width 15px
                    border-style solid
                    border-color #fff transparent transparent transparent
                    position absolute
                    top 2.4rem
                    transform scale(0.5, 0.9)
    > .calendar
        margin auto 4px

    > input.alert:focus + label
        display none

.yearinput
    width 2.5em !important

.datetime
    display flex
    flex-wrap nowrap
    box-shadow: 0 0 4px
    position absolute
    -webkit-touch-callout none /* iOS Safari */
    -webkit-user-select none /* Safari */
    -khtml-user-select none /* Konqueror HTML */
    -moz-user-select none /* Old versions of Firefox */
    -ms-user-select none /* Internet Explorer/Edge */
    user-select none /* Non-prefixed version, currently
                        supported by Chrome, Edge, Opera and Firefox */

.datebox
    position relative
    padding 5px
    width 250px
    height 300px
    background-color #ffffff
    overflow-x auto
    overflow-y hidden
    border-right 1px #a5a5a5 solid

.timebox
    position relative
    padding 5px
    width 200px
    height 300px
    background-color #ffffff
    overflow-x auto
    overflow-y hidden
    display flex
    flex-wrap nowrap
    justify-content space-evenly

.box-title
    display flex
    align-items center

.year-month
    padding 5px 0
    margin 3px 0
    font-weight bold
    width fit-content

.month-btns
    display inline-flex
    position absolute
    right 5px
    .disabled-arrow
        color grey
    > div
        margin 0 4px
        width 25px
        height 25px
        display flex
        justify-content center
        align-items center

.yearselect
    display flex
    flex-flow column
    overflow-x hidden
    overflow-y auto
    height 90%
    scrollbar-color #888
    scrollbar-width thin

.yearselect::-webkit-scrollbar
    width 8px

.yearselect::-webkit-scrollbar-thumb
  background #888

.yearselect::-webkit-scrollbar-thumb:hover
  background #555

.year
    background-color #b9b9b9
    border-bottom 1px #a5a5a5 solid
    padding 4px 4px

.monthselect
    display flex
    flex-wrap wrap
    background-color white
    justify-content space-around

.month
    width 20%
    height 30px
    display flex
    justify-content center
    align-items center
    border 2px solid white

.hover:hover
    background-color #a1c9da

.week
    display flex
    flex-wrap wrap
    justify-content space-around

.week > *
    width 25px
    height 25px
    padding 3px
    display flex
    justify-content center
    align-items center
    font-weight 600

.greydate
    color grey
    font-weight 500

.today
    color #2e5bff
    font-weight bold
    position absolute
    bottom 10px
    right 10px

.scroll
    overflow hidden auto
    height inherit

.hour,
.minute,
.ampm
    width 30%
    scrollbar-color #888888
    scrollbar-width thin


.hour::-webkit-scrollbar,
.minute::-webkit-scrollbar,
.ampm::-webkit-scrollbar
    width 5px

.hour::-webkit-scrollbar-thumb,
.minute::-webkit-scrollbar-thumb,
.ampm::-webkit-scrollbar-thumb
  background #888

.hour::-webkit-scrollbar-thumb:hover,
.minute::-webkit-scrollbar-thumb:hover,
.ampm::-webkit-scrollbar-thumb:hover
  background #555

.timeitem
    height 30px
    display flex
    justify-content center
    align-items center
    border 2px solid white

.disabled-timeitem
    color grey