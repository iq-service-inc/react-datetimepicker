#hideinput
    display none

.disable-selection
    -webkit-touch-callout none /* iOS Safari */
    -webkit-user-select none /* Safari */
    -khtml-user-select none /* Konqueror HTML */
    -moz-user-select none /* Old versions of Firefox */
    -ms-user-select none /* Internet Explorer/Edge */
    user-select none /* Non-prefixed version, currently
                        supported by Chrome, Edge, Opera and Firefox */

.bk
    position fixed
    height 100%
    width 100%
    top 0

.defaultinput
    width 300px
    background-color white
    border 1px solid grey
    border-radius 4px
    box-shadow 0 0 3px
    padding 2px

.datetimeinput
    position relative
    display flex
    align-items center
    > input
        outline none
        box-sizing border-box
        background none
        border none
        width 1.8em
        margin 0 2px
        border 2px solid transparent
        text-align center
        +label.displaynone
            display none
    > select
        outline none
        appearance none
        background none
        border 2px solid transparent
        text-align center
        cursor pointer
        > option
            padding 5px
    > input::-webkit-outer-spin-button,
    > input::-webkit-inner-spin-button 
        -webkit-appearance none
        margin 0
    > input[type=number]
        -moz-appearance textfield
    > .calendar
        position absolute
        right 8px
    >.yearinput
        width 3.5em !important

.datetimeinput:focus-within
    border 1px solid

.datetime
    z-index 1
    display flex
    flex-wrap nowrap
    box-shadow: 0 0 4px
    position absolute
    -webkit-touch-callout none /* iOS Safari */
    -webkit-user-select none /* Safari */
    -khtml-user-select none /* Konqueror HTML */
    -moz-user-select none /* Old versions of Firefox */
    -ms-user-select none /* Internet Explorer/Edge */
    user-select none /* Non-prefixed version, currently
                        supported by Chrome, Edge, Opera and Firefox */

.datebox
    position relative
    padding 5px
    width 250px
    height 300px
    background-color #ffffff
    overflow-x auto
    overflow-y hidden
    border-right 1px #a5a5a5 solid

.timebox
    position relative
    padding 5px
    width 200px
    height 300px
    background-color #ffffff
    overflow-x auto
    overflow-y hidden
    display flex
    flex-wrap nowrap
    justify-content space-evenly

.box-title
    display flex
    align-items center

.year-month
    padding 5px 0
    margin 3px 0
    font-weight bold
    width fit-content

.month-btns
    display inline-flex
    position absolute
    right 5px
    .disabled-arrow
        color grey
    > div
        margin 0 4px
        width 25px
        height 25px
        display flex
        justify-content center
        align-items center

.yearselect
    display flex
    flex-flow column
    overflow-x hidden
    overflow-y auto
    height 90%
    scrollbar-color #888
    scrollbar-width thin

.yearselect::-webkit-scrollbar
    width 8px

.yearselect::-webkit-scrollbar-thumb
  background #888

.yearselect::-webkit-scrollbar-thumb:hover
  background #555

.year,
.bigyear
    background-color #b9b9b9
    border-bottom 1px #a5a5a5 solid
    padding 4px 4px

.bigyear
    padding 10px 4px

.monthselect
    display flex
    flex-wrap wrap
    background-color white
    justify-content space-around

.month
    width 20%
    height 30px
    display flex
    justify-content center
    align-items center
    border 2px solid white

.hover:hover
    background-color #a1c9da

.week
    display flex
    flex-wrap wrap
    justify-content space-around

.week > *
    width 25px
    height 25px
    padding 3px
    display flex
    justify-content center
    align-items center
    font-weight 600

.greydate
    color grey
    font-weight 500

.today
    color #2e5bff
    font-weight bold
    position absolute
    bottom 10px
    right 10px

.scroll
    overflow hidden auto
    height inherit

.hour,
.minute,
.ampm
    width 30%
    scrollbar-color #888888
    scrollbar-width thin


.hour::-webkit-scrollbar,
.minute::-webkit-scrollbar,
.ampm::-webkit-scrollbar
    width 5px

.hour::-webkit-scrollbar-thumb,
.minute::-webkit-scrollbar-thumb,
.ampm::-webkit-scrollbar-thumb
  background #888

.hour::-webkit-scrollbar-thumb:hover,
.minute::-webkit-scrollbar-thumb:hover,
.ampm::-webkit-scrollbar-thumb:hover
  background #555

.timeitem
    height 30px
    display flex
    justify-content center
    align-items center
    border 2px solid white

.disabled-timeitem
    color grey

.onclick
    cursor pointer

.select
    background-color #2e5bff
    color white