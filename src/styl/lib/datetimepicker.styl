#root
    position absolute
    background-color #a5a5a5
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center

.onclick
    cursor pointer

.select
    background-color #2e5bff
    color white

.datetimebox
    position relative
    padding 5px
    width 200px
    height 250px
    background-color #ffffff
    overflow-x auto
    overflow-y hidden

.box-title
    display flex
    align-items center

.year-month
    padding 5px 0
    margin 3px 0
    font-weight bold
    width fit-content

.year-month:active
    border 1px solid

.month-btns
    display inline-flex
    position absolute
    right 5px

.month-btns > *
    width 25px
    height 25px
    display flex
    justify-content center
    align-items center

.yearselect
    display flex
    flex-flow column
    overflow-x hidden
    overflow-y auto
    height 90%
    scrollbar-color #888
    scrollbar-width thin

::-webkit-scrollbar
    width 8px

::-webkit-scrollbar-thumb
  background #888

.year
    background-color #b9b9b9
    border-bottom 1px #a5a5a5 solid
    padding 4px 4px

.monthselect
    display flex
    flex-wrap wrap
    background-color white
    justify-content space-around

.month
    width 20%
    height 30px
    display flex
    justify-content center
    align-items center
    border 2px solid white

.month:hover,
.date:hover,
.previousmonth:hover,
.nextmonth:hover
    background-color #a1c9da

.week
    display flex
    flex-wrap wrap
    justify-content space-around

.week > *
    width 20px
    height 20px
    padding 3px
    display flex
    justify-content center
    align-items center

.greydate
    color grey

.today
    color #2e5bff
    font-weight bold
    position absolute
    bottom 10px
    right 10px
